<configuration xmlns="http://logging.apache.org/log4php/">
    <appender name="fileAppender" class="LoggerAppenderFile">
        <layout class="LoggerLayoutPattern">
            <param name="conversionPattern" value="%date{Y-m-d H:i:s,u} | %logger{0} | %-5level | %msg %n%throwable"/>
        </layout>
        <param name="file" value="/var/log/hutkigrosh.log"/>
    </appender>
    <root>
        <level value="DEBUG"/>
        <appender_ref ref="fileAppender"/>
    </root>
</configuration>